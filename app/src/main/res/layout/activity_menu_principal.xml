<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MenuPrincipal">


    <View
        android:id="@+id/background_pinkish_red_perfil"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/background_pinkish_red"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="5dp"
        />

    <View
        android:id="@+id/background_deslogar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_yellow"
        app:layout_constraintEnd_toEndOf="@id/background_pinkish_red_perfil"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="5dp"
        />

    <View
        android:id="@+id/icon_deslogar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@id/background_deslogar"
        app:layout_constraintEnd_toEndOf="@id/background_deslogar"
        app:layout_constraintBottom_toBottomOf="@id/background_deslogar"
        app:layout_constraintTop_toTopOf="@id/background_deslogar"
        android:background="@drawable/baseline_logout_24"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPerfil"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/person4"
        app:shapeAppearanceOverlay="@style/circular"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@id/background_pinkish_red_perfil"
        app:layout_constraintTop_toTopOf="@id/background_pinkish_red_perfil"
        app:layout_constraintBottom_toBottomOf="@id/background_pinkish_red_perfil"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/NomeResponsavel_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: "
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toEndOf="@+id/imgPerfil"
        app:layout_constraintBottom_toTopOf="@id/NomeCriança_Txt"
        app:layout_constraintTop_toTopOf="@id/background_pinkish_red_perfil"
        app:layout_constraintEnd_toEndOf="@id/background_pinkish_red_perfil"
        />

    <TextView
        android:id="@+id/NomeCriança_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criança:"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toEndOf="@+id/imgPerfil"
        app:layout_constraintBottom_toBottomOf="@id/background_pinkish_red_perfil"
        app:layout_constraintTop_toBottomOf="@+id/NomeResponsavel_Txt"
        app:layout_constraintEnd_toEndOf="@id/background_pinkish_red_perfil"
        />

    <TextView
        android:id="@+id/telaIncial_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tela inicial"
        android:textColor="@color/yellow"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/background_pinkish_red_perfil"
        app:layout_constraintStart_toStartOf="@+id/background_pinkish_red_perfil"
        app:layout_constraintEnd_toEndOf="@+id/background_pinkish_red_perfil"/>

    <TextView
        android:id="@+id/AtividadeRecentes_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atividades Recentes"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/telaIncial_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/background_pinkish_red_AtivRecentes"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background_pinkish_red"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/AtividadeRecentes_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/NovasAtividades_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novas Atividades"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/background_pinkish_red_AtivRecentes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/background_pinkish_red_HabilidadeSociais"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_pinkish_red"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/NovasAtividades_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/HabilidadesSociais_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Habilidades Sociais"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/background_pinkish_red_HabilidadeSociais"
        app:layout_constraintEnd_toEndOf="@id/background_pinkish_red_HabilidadeSociais"
        app:layout_constraintTop_toTopOf="@id/background_pinkish_red_HabilidadeSociais"
        app:layout_constraintBottom_toBottomOf="@id/background_pinkish_red_HabilidadeSociais"
        />

    <View
        android:id="@+id/background_pinkish_red_HabilidadeCOM_LING"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_pinkish_red"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/background_pinkish_red_HabilidadeSociais"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/HabilidadeCOM_LING"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Habilidades de comunicação e linguagem"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/background_pinkish_red_HabilidadeCOM_LING"
        app:layout_constraintEnd_toEndOf="@id/background_pinkish_red_HabilidadeCOM_LING"
        app:layout_constraintTop_toTopOf="@id/background_pinkish_red_HabilidadeCOM_LING"
        app:layout_constraintBottom_toBottomOf="@id/background_pinkish_red_HabilidadeCOM_LING"
        />

    <View
        android:id="@+id/background_pinkish_red_HabilidadeMotricidade"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_pinkish_red"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/background_pinkish_red_HabilidadeCOM_LING"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/HabilidadeMotricidade_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Habilidades de Motricidade"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/background_pinkish_red_HabilidadeMotricidade"
        app:layout_constraintEnd_toEndOf="@id/background_pinkish_red_HabilidadeMotricidade"
        app:layout_constraintTop_toTopOf="@id/background_pinkish_red_HabilidadeMotricidade"
        app:layout_constraintBottom_toBottomOf="@id/background_pinkish_red_HabilidadeMotricidade"
        />

    <View
        android:id="@+id/bar_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_pinkish_red"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@+id/HabilidadeMotricidade_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/icon_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_home_24"
        app:layout_constraintStart_toStartOf="@+id/bar_menu"
        app:layout_constraintTop_toTopOf="@+id/bar_menu"
        app:layout_constraintBottom_toBottomOf="@+id/bar_menu"
        app:layout_constraintEnd_toStartOf="@id/icon_pesquisar"
        />

    <View
        android:id="@+id/icon_pesquisar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/icon_home"
        app:layout_constraintBottom_toBottomOf="@id/bar_menu"
        app:layout_constraintTop_toTopOf="@id/bar_menu"
        android:background="@drawable/baseline_search_24"
        app:layout_constraintEnd_toStartOf="@id/menu_perfil"

        />

    <View
        android:id="@+id/menu_perfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_person_2_24"
        app:layout_constraintStart_toEndOf="@+id/icon_pesquisar"
        app:layout_constraintTop_toTopOf="@id/bar_menu"
        app:layout_constraintBottom_toBottomOf="@id/bar_menu"
        app:layout_constraintEnd_toStartOf="@id/icon_config"
        />
    <View
        android:id="@+id/icon_config"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_settings_applications_24"
        app:layout_constraintStart_toEndOf="@+id/menu_perfil"
        app:layout_constraintTop_toTopOf="@id/bar_menu"
        app:layout_constraintBottom_toBottomOf="@id/bar_menu"
        app:layout_constraintEnd_toEndOf="@id/bar_menu"
        />

</androidx.constraintlayout.widget.ConstraintLayout>